        $(window).load(function () {
            $("#navBar").css("height", $("html").height());

            var gWidth = $("#main").width() - parseInt($("#gallery").css("marginLeft"));
            $("#gallery").css("width", gWidth);

            adjustCss();
        });

        $(window).resize(function () {
            $("#navBar").css("height", $("html").height());

            adjustCss();

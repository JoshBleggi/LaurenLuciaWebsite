<!DOCTYPE html>
<head>
</head>
@{
        ViewBag.Title = "Home Page";
}
        @section sidebar{
        <section class="sidebar">
            <table>
                <tr style="height: 25px; border-bottom: 1px solid #333333;">
                    <td/><td/>
                    </tr>
                @foreach (var image in ViewBag.ImageList)
                {
                    <tr style="position: relative; height: 70px; border-bottom: 1px solid #333333;">
                        <td style="width: 10px"/>
                        <td style="position: relative; width: 100%;">
                        @Html.ActionLink(" ", "Index", "Home", new
                        {
                            style = "position:absolute; top:25%; background: url('" + Url.Content(image) + "') no-repeat left; display:block; height:32px; width:200px;"
                        })
                        </td>
                           </tr>
                }
                </table>
            </section>
            }
    @section featured {
        <section>
            <link rel="stylesheet" href="../../Scripts/Slideshow/nivo-slider.css" type="text/css" />
            <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js" type="text/javascript"></script>
            <script src="../../Scripts/Slideshow/jquery.nivo.slider.pack.js" type="text/javascript"></script>
            <script type="text/javascript">
                $(window).load(function () {
                    $('#slider').nivoSlider();
                });
            </script>
            <div id="wrapper">
                <div class="slider-wrapper theme-default">
                    <div id="slider" class="nivoSlider">
                            <img src="../../Content/Images/LaurenImages/Slideshow/Dashboard/slide1.jpg" alt="" />
                            <img src="../../Content/Images/LaurenImages/Slideshow/Dashboard/slide2.jpg" alt="" />
                            <img src="../../Content/Images/LaurenImages/Slideshow/Dashboard/slide3.jpg" alt="" />
                            <img src="../../Content/Images/LaurenImages/Slideshow/Dashboard/slide4.jpg" alt="" />
                    </div>
                </div>
            </div>
</section>
        }
